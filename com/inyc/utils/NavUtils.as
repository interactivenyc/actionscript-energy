package com.inyc.utils {	import flash.external.ExternalInterface;	import flash.net.URLRequest;	import flash.net.navigateToURL;		/**	 * @author stevewarren	 */	public class NavUtils {						public static function getURL(url:String, window:String = "_self"):void{            var req:URLRequest = new URLRequest(url);            try            {                navigateToURL(req, window);            }            catch (e:Error)            {            }        }                public static function openSizedWindow(_url:String,_window:String,_width:int,_height:int):void{        	var _params:String = "width="+_width+",height="+_height;			ExternalInterface.call( "window.open", _url, _window, _params );		}				public static function getCurrentURL():String{			var returnURL:String;			returnURL = ExternalInterface.call("parent.window.location.href.toString");			if (returnURL == null) returnURL = "";			return returnURL;		}				public static function getBaseURL():String{			var baseURL:String;			var currentURL:String = getCurrentURL();			if(!currentURL) return null;						baseURL = currentURL.split("/").splice(0,3).join("/");						return baseURL;		}                public static function getQueryVars(url:String):Object{        	var queryVars:Object;        	try{	            var queryObject:Object = new Object();	            var processQueryArray:Array = url.split("?");	            if (processQueryArray.length>1){		            var queryString:String = processQueryArray[1];		            var queryArray:Array = queryString.split("&");		            var queryPair:Array;			            for (var i:int=0;i<queryArray.length;i++){		            	queryPair = queryArray[i].split("=");		            	queryObject[queryPair[0]]=queryPair[1];		            }	            }	            queryVars = queryObject;        	}catch(e:Error){        		trace("ERROR in getQueryVars");        	}        	return queryVars;        }			}}