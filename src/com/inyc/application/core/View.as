package com.inyc.application.core {	import com.inyc.events.Events;	import com.inyc.events.GenericDataEvent;	import com.greensock.TweenLite;		import flash.events.Event;	
	/**	 * @author stevewarren	 */	public class View extends CoreMovieClip {				public function View() {			//don't log before controller exists		}				override protected function onRemovedFromStage(e:Event):void{			super.onRemovedFromStage(e);			dispatchCloseEvent();		}				public function destroy():void{			parent.removeChild(this);		}				public function transitionIn():void{			TweenLite.to(this, .2, {alpha:1, onComplete:transitionInComplete});		}				protected function transitionInComplete():void{			stage.dispatchEvent(new GenericDataEvent(Events.VIEW_TRANSITION_FINISHED, {view:this, transition:"in"}));		}		public function transitionOut():void{			TweenLite.to(this, .2, {alpha:0, onComplete:transitionOutComplete});		}				protected function transitionOutComplete():void{			stage.dispatchEvent(new GenericDataEvent(Events.VIEW_TRANSITION_FINISHED, {view:this, transition:"out"}));			destroy();		}				protected function dispatchCloseEvent():void{			stage.dispatchEvent(new GenericDataEvent(Events.DESTROY_VIEW, {view:this}));		}					}}