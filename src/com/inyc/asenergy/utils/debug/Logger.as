package com.inyc.asenergy.utils.debug {	import com.inyc.asenergy.events.Events;		import com.inyc.asenergy.events.GenericDataEvent;			/**	 * @author stevewarren	 */	 	public class Logger {			private static var instance:Logger;		private static var ALLOW_DEBUG:Boolean = true;		 		function Logger() {			 		}				public static function log(message:*, category:Array=null, tagEveryLine:Boolean=false):void {			if (!ALLOW_DEBUG) return;						if (message==null) message="null";			if (instance == null) instance = new Logger();						if (message.toString() == "[object Object]") {				sendDump(message, category, tagEveryLine);			} else {				sendString(message, category, tagEveryLine);			}								}						public static function sendString(message:String, category:Array, tagEveryLine:Boolean=false):void {			if(tagEveryLine) message = tagLines(message,category);			trace(message);					}		public static function sendDump(object:Object, category:Array, tagEveryLine:Boolean=false):void {			sendString(TraceObject.DUMP(object), category, tagEveryLine);		}				public static function tagLines(message:String,category:Array):String{			var messageArray:Array = message.split("\n");			var prefix:String = "[ "+category+" ] ";			message = prefix + messageArray.join("\n"+prefix);			return message;		}	}}