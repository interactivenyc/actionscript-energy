package com.inyc.asenergy.utils {	import fl.controls.ComboBox;
	import fl.data.DataProvider;
	
	import flash.text.TextFormat;	

	/**	 * @author stevewarren	 */	public class ComponentUtils {				public function ComponentUtils(){					}				public static function getMonthDataProvider():DataProvider {			var items:Array = [				{label:"January", data:1},				{label:"February", data:2},				{label:"March", data:3},				{label:"April", data:4},				{label:"May", data:5},				{label:"June", data:6},				{label:"July", data:7},				{label:"August", data:8},				{label:"September", data:9},				{label:"October", data:10},				{label:"November", data:11},				{label:"December", data:12}			];			return new DataProvider(items);		}				public static function getDayDataProvider(monthIndex:int):DataProvider{			var monthArray = [31,29,31,30,31,30,31,31,30,31,30,31];			var items:Array = new Array();			var monthLength = monthArray[monthIndex-1];						for(var i:int=0;i<monthLength;i++){				items.push({label:(i+1), data:(i+1)});			}						return new DataProvider(items);		}				public static function getYearDataProvider(startYear:int, numYears:int):DataProvider{			var items:Array = new Array();						for(var i:int=numYears;i>0;i--){				items.push({label:(startYear+i), data:(startYear+i)});				//trace("creating year:"+(startYear+i));			}						return new DataProvider(items);		}						public static function setComboBoxStyle(comboBox:ComboBox,font:String = "Arial",size:Number = 12, color:uint = 0x000000) {			var textFormat:TextFormat = new TextFormat();			textFormat.font=font;			textFormat.color=color;			textFormat.size=size;			comboBox.textField.setStyle("textFormat",textFormat);		}							}}