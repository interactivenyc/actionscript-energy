package com.inyc.asenergy.view.components{	import flash.events.Event;	import flash.text.TextField;
	public class DialogButton extends MCButton	{		public var textField:TextField;				private var _buttonText:String;		public var callback:Function;				public static var BTN_SIZE_LARGE:String = "BTN_SIZE_LARGE";				public function DialogButton(buttonText:String = "", callback:Function = null)		{			super();			_buttonText = buttonText;			this.callback = callback;		}				public function get text():String{			return textField.text;		}				public function get label():String{			return textField.text;		}				public function set label(value:String):void{			_buttonText = value;			textField.text = _buttonText;		}				public function setButtonSize(btn_size:String):void{			if (btn_size == BTN_SIZE_LARGE){				bg.gotoAndStop("large");				textField.width = bg.width;			}		}						override protected function onAddedToStage(e:Event):void{			super.onAddedToStage(e);			//log(textField);			textField.text = _buttonText;		}					}}