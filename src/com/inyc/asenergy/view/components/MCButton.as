package com.inyc.asenergy.view.components{	import com.greensock.TweenLite;	import com.greensock.plugins.ColorTransformPlugin;	import com.greensock.plugins.TintPlugin;	import com.greensock.plugins.TweenPlugin;	import com.inyc.asenergy.events.AppEvents;	import com.inyc.asenergy.events.GenericDataEvent;		import flash.events.Event;	import flash.events.MouseEvent;
	public class MCButton extends CoreButton	{		public function MCButton(){			log("MCButton Constructor");			super();			TweenPlugin.activate([TintPlugin, ColorTransformPlugin]);		}				public function set downState(down:Boolean):void{			//log("set downState: "+down + ", "+this);			if (down){				//alpha = .5;				TweenLite.to(this, .01, {colorTransform:{tint:0xFFFFFF, tintAmount:0.35}});			}else{				//alpha = 1;				TweenLite.to(this, .01, {colorTransform:{tint:0xFFFFFF, tintAmount:0}});			}		}				override protected function onAddedToStage(e:Event):void{			super.onAddedToStage(e);		}				override protected function onRemovedFromStage(e:Event):void{			super.onRemovedFromStage(e);		}				override protected function onMouseEvent(e:MouseEvent):void{						//if (AppController.ANIMATING == true) return;						switch(e.type){				case MouseEvent.MOUSE_DOWN:					downState = true;					break;				case MouseEvent.MOUSE_UP:				case MouseEvent.MOUSE_OUT:					downState = false;					break;				case MouseEvent.CLICK:					downState = false;					_eventDispatcher.dispatchEvent(new GenericDataEvent(AppEvents.BUTTON_CLICK, {button:this}));					break;							}		}					}}