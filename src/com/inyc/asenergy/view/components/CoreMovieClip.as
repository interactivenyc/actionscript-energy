package com.inyc.asenergy.view.components {		import com.inyc.asenergy.events.AppEvents;	import com.inyc.asenergy.events.CoreEventDispatcher;	import com.inyc.asenergy.events.GenericDataEvent;	import com.inyc.asenergy.utils.debug.Logger;		import flash.display.MovieClip;	import flash.events.Event;	/**	 * @author stevewarren	 */	public class CoreMovieClip extends MovieClip {		protected var _eventDispatcher:CoreEventDispatcher;				public function CoreMovieClip() {			_eventDispatcher = CoreEventDispatcher.getInstance();						addEventListener(Event.ADDED_TO_STAGE, onAddedToStage); //TODO: Steve, these are never on the stage to begin with, right? NO - THEY ARE ALWAYS ADDED WITH CODE.			//addEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);		}				protected function onAddedToStage(e:Event):void{			removeEventListener(Event.ADDED_TO_STAGE, onAddedToStage);			addEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);		}						protected function onRemovedFromStage(e:Event):void{			removeEventListener(Event.REMOVED_FROM_STAGE, onRemovedFromStage);						addEventListener(Event.ADDED_TO_STAGE, onAddedToStage);		}				protected function showLoader():void{			//log("showing loader");			_eventDispatcher.dispatchEvent(new GenericDataEvent(AppEvents.SHOW_LOADER));			}						protected function hideLoader():void{			//log("hiding loader");			_eventDispatcher.dispatchEvent(new GenericDataEvent(AppEvents.HIDE_LOADER));			}							protected function log(logItem:*, ...args):void{			var category:Array = [this.toString().replace("[object ", "").replace("]", "")];			Logger.log(logItem,category,true);						if (args.length > 0) {				Logger.log(args,[category[0]+"..."],true);        	}		}					}}