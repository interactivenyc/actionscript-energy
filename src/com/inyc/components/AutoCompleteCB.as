package com.inyc.components {	import fl.controls.ComboBox;	import fl.data.DataProvider;		import flash.events.*;		public class AutoCompleteCB extends ComboBox {				public var masterlist:Array;		public var filteredlist:Array;				private var lettercount:int;				public function AutoCompleteCB(initarray:Array){			masterlist = initarray;			filteredlist = new Array();			this.dataProvider = filteredarray("");			lettercount = this.text.length;			this.addEventListener(Event.CHANGE, changelist, false, 0, true);			this.editable = true;					}				public function changelist(e:Event){			this.dataProvider = filteredarray(this.text);			this.open();		}				public function filteredarray(letters:String):DataProvider{			var labeltext:String;			var newlist:DataProvider = new DataProvider();						var flint:int = filteredlist.length;			var checkarray:Array;						if(flint>0 && this.text.length > lettercount){				checkarray = filteredlist;			}else{				checkarray = masterlist;							}						var mlint:int = checkarray.length;			filteredlist = new Array();			var checkobj:Object;			for (var i = 1; i<mlint; i++){				checkobj = checkarray[i] as Object;				labeltext = checkobj.label;				labeltext = labeltext.toUpperCase();								if (labeltext.indexOf(letters.toUpperCase()) >= 0)				{					newlist.addItem(checkobj);					filteredlist.push(checkobj);				}			}			return newlist;		}	}	}