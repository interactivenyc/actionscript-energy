package com.inyc.components {	import com.inyc.utils.LoaderUtils;		import flash.display.Loader;	import flash.display.LoaderInfo;	import flash.display.MovieClip;	import flash.events.Event;	import flash.text.TextField;			/**	 * @author stevewarren	 */	public class CarouselItem extends BasicButton {		private var _data:XML;		public var titleMC:MovieClip;		private var _title:String;		public var imageMC:MovieClip;		private var _imageURL:String;
		public function CarouselItem() {			//log("constructor");		}								public function setData(data:XML):void{			//log("setData");			_data = data;						_title = _data.@name;			_imageURL = _data.@imageURL;		}				public function get data():XML{			return _data;		}				override protected function init():void{			//log("init");						if (_title && titleMC && titleMC.tf && titleMC.tf is TextField){				var tf:TextField = titleMC.tf as TextField;				tf.text = _title;				if (tf.numLines > 1){					tf.y -= 8;					tf.height = 32;				}			}						if (_imageURL && imageMC){				var loaderUtils:LoaderUtils = new LoaderUtils();				var loader:Loader = loaderUtils.load(_imageURL, false);				loader.contentLoaderInfo.addEventListener(Event.COMPLETE, imageLoaded);				//imageMC.addChild(loader);			}					}				protected function imageLoaded(e:Event){			var loader:Loader = (e.target as LoaderInfo).loader;			imageMC.addChild(loader.content);			loader.removeEventListener(Event.COMPLETE, imageLoaded);			loader = null;		}				public function destroy(){					}	}}